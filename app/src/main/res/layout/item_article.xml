<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:contentDescription="@string/article_image"
        android:background="@color/colorAccent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp">

        <TextView
            android:id="@+id/article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/article_author_font_size"
            android:textColor="@color/white"
            android:text="ARTICLE AUTHOR"/>

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/article_title_font_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Article titleArticle titleArticle titleArticle titleArticle tiqqqtle"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/article_author"/>


    </RelativeLayout>

</LinearLayout>